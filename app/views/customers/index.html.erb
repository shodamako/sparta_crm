
<div class="row">
  <div class="col-lg-12">
    <h1>顧客一覧</h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>姓</th>
            <th>名前</th>
            <th>電子アドレス</th>
            <th>リンク</th>
          </tr>
        </thead>

        <tbody>

        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.family_name %></td>
            <td><%= customer.given_name %></td>
            <td><%= customer.email %></td>
            <td><%= link_to '詳細', customer, class: "btn btn-sm btn-default" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <%= paginate @customers %>
  </div>
</div>

